<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#383838"
    android:backgroundTintMode="add"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mcheyne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/mcheyneList1"
            layout="@layout/cardviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp" />

        <include
            android:id="@+id/mcheyneList2"
            layout="@layout/cardviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp" />

        <include
            android:id="@+id/mcheyneList3"
            layout="@layout/cardviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp" />

        <include
            android:id="@+id/mcheyneList4"
            layout="@layout/cardviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/mcheyne_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:backgroundTint="#383838"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal|center_vertical"
            android:maxHeight="48dp"
            android:minHeight="48dp"
            android:text="@string/not_done"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="14sp"
            android:typeface="normal"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pgh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"

            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <include
                android:id="@+id/pgh1"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/pgh2"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <include
                android:id="@+id/pgh3"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/pgh4"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <include
                android:id="@+id/pgh5"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/pgh6"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <include
                android:id="@+id/pgh7"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/pgh8"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <include
                android:id="@+id/pgh9"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/pgh10"
                layout="@layout/cardviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/material_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:backgroundTint="#383838"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal|center_vertical"
            android:maxHeight="48dp"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="14sp"
            android:typeface="normal" />
    </LinearLayout>
</LinearLayout>
