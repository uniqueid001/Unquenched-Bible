<resources>

    <!-- Base application theme. -->
    <style name="splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:actionMenuTextColor">@color/menu_text</item>
        <item name="android:colorPrimaryDark">@color/unquenchedEmph</item>
        <item name="android:colorPrimary">@color/unquenchedEmphDark</item>
        <item name="android:colorAccent">@color/unquenchedText</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>
    <style name="licensesTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorPrimary">@color/unquenchedEmphDark</item>
        <item name="android:colorPrimaryDark">@color/unquenchedEmph</item>
    </style>
    <style name="AppThemeWAction" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:actionMenuTextColor">@color/menu_text</item>
        <item name="colorAccent">@color/unquenchedEmph</item>
        <item name="colorPrimary">@color/unquenchedEmph</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlNormal">#509CB9D3</item>
        <item name="android:actionMenuTextColor">@color/menu_text</item>

        <item name="colorControlActivated">#9CB9D3</item>
        <item name="colorControlHighlight">#f44336</item>
    </style>
    <style name="AppPreference" parent="AppTheme">
        <item name="android:layout">@layout/preference_material</item>
        <item name="android:actionMenuTextColor">@color/menu_text</item>
    </style>
    <style name="AppPreference.DialogPreference">
        <item name="android:buttonBarButtonStyle">@style/AlertButton</item>
    </style>
    <style name="AlertButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">#383838</item>
        <item name="android:textColor">@color/unquenchedEmph</item>
        <item name="android:padding">5dp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">48dp</item>
    </style>
    <style name="unquenchedAlert" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/unquenchedEmph</item>
        <item name="android:buttonBarButtonStyle">@style/AlertButton</item>
        <item name="dialogPreferredPadding">10dp</item>
    </style>
</resources>
